extends layout2
block content2
  div.table-box
    form.form-group
      select.form-control
        option 订单号
        option 手机号码
      div.form-group
        input(type='select').form-control
      button(type='submit').btn.btn-default 查询
    table.table.table-hover.table-striped
      caption #共xx条数据
      thead
        tr
          th 订单号
          th 用户昵称
          th 地址
          th 手机号码
          th 下单时间
          th 支付状态
          th 发货状态
          th 操作