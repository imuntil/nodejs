{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "paths": {
      "*" : ["@types/*"]
  }
  },
  "exclude": [
    "node_modules"
  ]
}