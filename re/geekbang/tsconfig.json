{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "@types/*"
      ],
      "@babel/register": ["@types/babel__register"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}